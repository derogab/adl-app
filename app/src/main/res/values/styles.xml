<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentVariant</item>
        <item name="colorOnSecondary">@color/colorOnAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccentDark</item>
        <item name="colorSecondaryVariant">@color/colorAccentVariantDark</item>
        <item name="colorOnSecondary">@color/colorOnAccentDark</item>
        <item name="colorError">@color/colorErrorDark</item>
        <item name="colorOnError">@color/colorOnErrorDark</item>
        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="colorOnSurface">@color/colorOnSurfaceDark</item>
        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorOnBackground">@color/colorOnBackgroundDark</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryVariantDark</item>
    </style>

</resources>
